<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:paddingTop="@dimen/cities_item_padding"
    android:layout_margin="@dimen/cities_item_margin"
    android:background="@drawable/ripple"
    android:paddingBottom="@dimen/cities_item_padding"
    android:paddingStart="@dimen/cities_item_padding"
    android:id="@+id/city_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    tools:ignore="RtlSymmetry">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/average_text"
            android:textStyle="bold"
            android:id="@+id/city"
            android:layout_height="0dp"
            tools:ignore="NestedWeights" />
        <TextView
            android:layout_width="wrap_content"
            android:textSize="@dimen/small_text"
            android:layout_height="wrap_content"
            android:id="@+id/city_description"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        tools:ignore="UseCompoundDrawables">
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/city_temp"
            android:textSize="@dimen/large_text"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            />
        <ImageView
            android:layout_marginStart="@dimen/average_start_margin"
            android:layout_width="@dimen/cities_image_width"
            android:layout_gravity="end"
            android:id="@+id/city_icon"
            android:layout_height="@dimen/cities_image_height"
            android:contentDescription="@string/weather_condition_image" />
    </LinearLayout>
</LinearLayout>